[user]
	name = Gergely Tamas Kurucz
	email = temaruk@gmail.com

[branch]
  autosetuprebase = always

[push]
  default = tracking

[rerere]
  enabled = 1
  autoupdate = true

[color]
  ui = auto
  status = auto
  branch = auto
  interactive = auto

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse

[core]
  whitespace = fix,-indent-with-non-tab,-indent-with-tab,trailing-space,cr-at-eol
  editor = subl -w
	excludesfile = /Users/gergely/.gitignore_global

 ; Fancy aliases 
[alias]
  df = !git diff --no-prefix && git diff --staged --no-prefix
  clear = reset --hard
  s = status -sb
  co = checkout
  b = branch
  
  ; List branches in latest commit date order.
  bdate = for-each-ref --sort=-committerdate refs/heads/ --format='%(committerdate:short)%09%(refname:short)'

  ; Delete merged local branches.
  bdm = !git branch --merged | grep -v master | xargs git branch -diff

  ci = commit
  cim = commit -m
  last = log -l HEAD
  unadd = reset HEAD --
  sm = submodule
  f = fetch
  cp = cherry-pick
  lp = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
  a = add .
  this = !git init && git add . && git commit -m \"initial commit\"

  ; List git aliases.
  alias = !git config --list | grep -E 'alias\\.' | sed -E 's/alias\\.([^=]*)=(.*)/\\1 => \\2/' | sort
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  todo = grep --heading --break --ignore-case -e ' FIX: *' -e ' TODO: *'

  ; List untracked files.
  untracked = ls-files --other --exclude-standard
[credential]
	helper = osxkeychain
